
<%- include('partials/header'); -%>

<div class="newsletter">
    <form class="bgPost" method="post">
        
        <h1 class="h3 mb-3 fw-normal">Subscribe to our newsletter</h1>

        <div class="form-floating">
            <label for="floatingInput">First Name</label>
            <input type="text" class="form-control"  name="firstname" placeholder="Name" autocomplete="off">
        </div>

        <div class="form-floating">
            <label for="floatingInput">Last name</label>
            <input type="text" class="form-control"  name="lastname" placeholder="Surname" autocomplete="off">
        </div>

        <div class="form-floating">
            <label for="floatingPassword">Email</label>
            <input type="email" class="form-control" name="email"  placeholder="name@example.com" autocomplete="off">
        </div><br>

        
        <button class="mt-3 w-100 btn btn-lg btn-primary" type="submit" name = "button1" >Sign up</button>
    </form>

</div>
<%- include('partials/footer'); -%>