<%- include('partials/header'); -%>

    <img src= "/imgs/pen.png" style="border-style: solid; border-width: 2px; border-radius: 50%; margin-top: 2rem;" alt="pen image">

    <h1>Home</h1> 

    <p><%= paragraph %></p>

    <a href="/compose"><button class="btn btn-primary">Add blog</button></a>

    <% allPosts.forEach((post) => { %>
        <a href= "/posts/<%= post.title %>" class="noLinkDecoration">
            <div class="bgPost">
                <h1 class="Articletitle"><%= post.title %></h1>
                <p style="display: inline;"><%= post.text.substring(0,145) + "..." %></p><a href= "/posts/<%= post.title %>">Read more</a>
            </div>
        </a>
    <% }) %>


    

<%- include('partials/footer'); -%>